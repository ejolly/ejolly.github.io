{
  "name": "indigo",
  "version": "1.0.0",
  "homepage": "https://github.com/sergiokopplin/indigo#readme",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sergiokopplin/indigo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergiokopplin/indigo.git"
  },
  "scripts": {
    "build": "bundle exec jekyll build",
    "build_drafts": "bundle exec jekyll build --drafts",
    "draft": "npm run build_drafts && clear && bundle exec jekyll serve --livereload --incremental --drafts",
    "write": "npm run build && clear && bundle exec jekyll serve --livereload --incremental",
    "dev": "bundle exec jekyll serve --livereload",
    "test": "bundle exec htmlproofer ./_site"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.7",
    "autoprefixer": "^10.4.12",
    "cssnano": "^5.1.13",
    "postcss": "^8.4.17",
    "postcss-import": "^15.0.0",
    "tailwindcss": "^3.1.8"
  }
}
